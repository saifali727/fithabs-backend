    {
      "name": "4. Coach Services & Booking",
      "item": [
        {
          "name": "Public: Get Coaches",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/coaches"
          }
        },
        {
          "name": "Public: Get Coach Services",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/coaches/1/services"
          }
        },
        {
          "name": "Create Service (Coach Only)",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{coachToken}}"
                }
              ]
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"title\": \"1-on-1 Fitness Session\",\n    \"description\": \"One hour personal training call.\",\n    \"price\": 50.00,\n    \"duration_minutes\": 60,\n    \"is_active\": true\n}"
            },
            "url": "{{baseUrl}}/services"
          }
