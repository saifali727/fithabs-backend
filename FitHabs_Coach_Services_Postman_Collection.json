                {
                    "name": "Book Service (Intent)",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "var jsonData = pm.response.json();",
                                    "if(jsonData.booking_id) {",
                                    "    pm.environment.set(\"booking_id\", jsonData.booking_id);",
                                    "    // Simulate payment intent ID from real response or mock",
                                    "    // For real testing, you'd use the clientSecret with Stripe SDK",
                                    "    // But here we might need the Intent ID to 'confirm' manually if we mock the webhook/confirm flow.",
                                    "    // Wait, the API returns clientSecret. ",
                                    "    // The 'confirm' endpoint expects 'payment_intent_id'.",
                                    "    // In a real flow, Stripe confirms success via webhook or client confirms via SDK.",
                                    "    // Our 'confirm' endpoint checks status from Stripe.",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "auth": {
                            "type": "bearer",
                            "bearer": [
                                {
                                    "key": "token",
                                    "value": "{{user_token}}",
                                    "type": "string"
                                }
                            ]
                        },
                        "method": "POST",
                        "header": [],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"service_id\": {{service_id}},\n    \"booked_for\": \"2025-12-25T10:00:00\"\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{base_url}}/api/v1/bookings/intent",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "v1",
                                "bookings",
                                "intent"
                            ]
                        }
                    },
                    "response": []
                },
